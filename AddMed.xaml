<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDeviceFinalProject.AddMed"
             Title="AddMed">
   <StackLayout Padding="20">
      <Entry Placeholder="Medication Name" Text="{Binding MedName}" />
      <Entry Placeholder="Dosage" Text="{Binding Dosage}" />
      <Entry Placeholder="Special Instructions" Text="{Binding MedInstructions}" />
      <Editor Placeholder="Time Taken" Text="{Binding TimeTaken}" />
      <Editor Placeholder="Days Taken" Text="{Binding DaysTaken}" />
      <Button Text="Save" Clicked="OnSaveClicked" />
      <Button Text="Back" Clicked="OnBackClicked" />
   </StackLayout>
</ContentPage>