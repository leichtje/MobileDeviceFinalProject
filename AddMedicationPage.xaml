<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDeviceFinalProject.AddMedicationPage"
             Title="Add Medication"
             BackgroundColor="{StaticResource DarkBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="MedNameEntry" Placeholder="Medication Name" TextColor="White"/>
            <Entry x:Name="DosageEntry" Placeholder="Dosage" TextColor="White"/>
            <Entry x:Name="InstructionsEntry" Placeholder="Special Instructions" TextColor="White"/>
            <Entry x:Name="TimeTakenEntry" Placeholder="Time Taken (e.g. 3:00 PM)" TextColor="White"/>
            <Entry x:Name="DaysTakenEntry" Placeholder="Days Taken (e.g. MWF)" TextColor="White"/>

            <Border>
               <Button Text="Save" Clicked="OnSaveClicked" />
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
