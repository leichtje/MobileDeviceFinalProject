<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileDeviceFinalProject"
             x:Class="MobileDeviceFinalProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

           
            <Color x:Key="PrimaryColor">#277a6e</Color>
            <Color x:Key="AccentColor">#03DAC5</Color>
            <Color x:Key="DarkBackgroundColor">#101c1a</Color>

            <Style TargetType="Label">
               <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
               <Setter Property="FontSize" Value="16" />
            </Style>

            <Style TargetType="Button">
               <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
               <Setter Property="TextColor" Value="White" />
               <Setter Property="CornerRadius" Value="8" />
               <Setter Property="FontSize" Value="20"/>
            </Style>

            <Style TargetType="Border">
               <Setter Property="StrokeThickness" Value="3"/>
               <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}"/>
               <Setter Property="StrokeShape">
                  <Setter.Value>
                     <RoundRectangle CornerRadius="8" />
                  </Setter.Value>
               </Setter>
            </Style>

            <Style x:Key="ListItem" TargetType="Label">
               <Setter Property="FontSize" Value="20"/>
            </Style>

      </ResourceDictionary>
    </Application.Resources>
</Application>
