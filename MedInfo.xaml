<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDeviceFinalProject.MedInfo"
             Title="MedInfo">
   <StackLayout Padding="20" Spacing="15">
      <Label Text="{Binding MedName}" />
      <Label Text="{Binding Dosage}" />
      <Label Text="{Binding MedInstructions}" />
      <Label Text="{Binding TimeTaken}" />
      <Label Text="{Binding DaysTaken}" />
      <Button Text="Back" Clicked="OnBackClicked" />
   </StackLayout>
</ContentPage>